generator client {
  provider = "prisma-client-js"
  
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Modelo de Artista
model artista {
  id       Int      @id @default(autoincrement())
  nombre   String
  pais     String?
  albums   album[]  // Un artista puede tener varios álbumes
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("Artista") // <-- Prisma buscará la tabla "Artista"
}

// Modelo de Álbum
model album {
  id        Int       @id @default(autoincrement())
  titulo    String
  anio      Int
  genero    String?
  artistaId Int       // Relación con Artista
  artista   artista   @relation(fields: [artistaId], references: [id], onDelete: Cascade)
  canciones cancion[] // Un álbum puede tener varias canciones
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

// Modelo de Canción
model cancion {
  id       Int     @id @default(autoincrement())
  titulo   String
  duracion Int     // Duración en segundos
  albumId  Int
  album    album   @relation(fields: [albumId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
